
import React from 'react';

import { CartList } from "../Cart/CartList";

export const CheckoutSummary = (
    {
        cart,
        hasRates,
       rates,
        cartTotal,
        shippingCost
    }) => {

	const [isOpen, setIsOpen] = React.useState(false);

    return (
        <div id="checkout-summary">
           <div className="checkout-summary">
             <div>
               <h2
                 className="checkout-summary__head head_level-2 head">Summary</h2>
             </div>

              {/* <div className="dropdown__total total-wrapper"> */}
              {/*   <p */}
              {/*     className="paragraph" */}
              {/*     style={{opacity: 1}}> */}

              {/*     <span style={{opacity: 0.55}}> Cart ({cart.reduce((pre, accum) => pre + accum.quantity, 0)}) </span> </p> */}
              {/*   <p className="head_level-3">$ {cartTotal.toLocaleString('en-US')}</p> */}
              {/* </div>   */}


             {true &&

             <div className={`${isOpen ? "open-accord" : "close-accord"}`}>
               <CartList
                 cart={cart}
                 isCheckout={true}
                 updateOrderSize={null}/>

              <div className="dropdown__total total-wrapper">
                <p
                  className="paragraph"
                  style={{opacity: 1}}>

                  <span style={{opacity: 0.55}}> Cart ({cart.reduce((pre, accum) => pre + accum.quantity, 0)}) </span> </p>
                <p className="head_level-3">$ {cartTotal.toLocaleString('en-US')}</p>
              </div>  



                <div className="dropdown__total total-wrapper">
                <p
                  className="paragraph">shipping </p>
                <p className={hasRates && rates.length ? "head_level-3" : "status"}>{shippingCost ? '$ ' + shippingCost.toLocaleString('en-US') : "(pending)"}</p>
              </div>  
              <div className="dropdown__total total-wrapper">
                <p
                  className="paragraph">tax </p>
                <p className="status">(pending)</p>
              </div>
              </div>
             } 
              <div className="dropdown__total total-wrapper grand">
                <p
                  className="paragraph">total </p>
                <p className="status">
                  {(cartTotal+shippingCost).toLocaleString('en-US')}
                </p>
              </div>  

	  </div>
	</div>
       
    )
}
